<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/container_toolbar"
    android:orientation="vertical"
    android:padding="@dimen/content_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amount_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_source_hint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/amount_source_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:text="100.0"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/change_source_valute"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Рубли"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amount_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_target_hint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/amount_target_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:text="100.0"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/change_target_valute"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Доллары США"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="100 RUR = 6400 USD"/>

</LinearLayout>